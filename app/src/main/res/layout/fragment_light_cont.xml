<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lightContFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/lightOnBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lightOnBtnText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/lightOffBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/lightOffBtnText"
        app:layout_constraintEnd_toEndOf="@+id/lightOnBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lightOnBtn"
        app:layout_constraintTop_toBottomOf="@+id/lightOnBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>